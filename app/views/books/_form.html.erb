<%= form_with model: book do |f| %>
  <div class="form-group">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :body %><br />
    <%= f.text_area :body, autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create or Update' %>
  </div>
<% end %>