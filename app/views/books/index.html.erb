<p><%= flash[:notice] %></p>
<%= form_with url:searches_path, method: :get, local:true do |f| %>
  <%= f.text_field :ward %>
  <%= f.submit '検索する' %>
<% end %>
<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "show", book_path(book.id) %></td>
      <td><%= link_to "edit", edit_book_path(book) %></td>
      <td><%= link_to "destroy", book_path(book), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New Book</h2>
<%= render 'errors', obj: @book %>
<%= render 'form', book: @book %>